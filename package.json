{
  "name": "crownchronicle",
  "private": true,
  "description": "Crown Chronicle - 基于历史背景的文字冒险游戏",
  "version": "1.0.0",
  "author": "zhs007",
  "license": "MIT",
  "workspaces": [
    "core",
    "editor",
    "prototype"
  ],
  "scripts": {
    "build": "npm run build --workspace=core && npm run build --workspace=editor && npm run build --workspace=prototype",
    "dev:core": "npm run dev --workspace=core",
    "dev:editor": "npm run dev --workspace=editor",
    "dev:prototype": "npm run dev --workspace=prototype",
    "test": "npm test --workspace=core",
    "clean": "npm run clean --workspace=core && npm run clean --workspace=prototype",
    "install-all": "npm install --workspaces"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zhs007/crownchronicle.git"
  },
  "keywords": [
    "game",
    "text-adventure",
    "historical",
    "typescript",
    "modular-architecture"
  ]
}
